<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leno.materialdesign">

    <uses-sdk android:minSdkVersion="8" android:maxSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".MainActivity" android:label="Travelogue">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AndroidFacebookActivity"
            android:label="Facebook Integrated">

        </activity>
        <activity android:name=".HomeScreen"
            android:label="Travelogue - Home"></activity>
    </application>

    <strong><!-- Connect to Internet Permissions --></strong>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>